{
  "name": "weather-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "clean": "rimraf node_modules .vite dist",
    "build:clean": "rimraf dist && vite build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "date-fns": "^4.1.0",
    "locale": "^0.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-swipeable": "^7.0.2",
    "styled-components": "^6.1.19",
    "swiper": "^12.0.3",
    "zustand": "^5.0.9"
  }
}
